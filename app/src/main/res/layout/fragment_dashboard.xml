<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escribe aqui lo que deseas añadir"
        android:layout_gravity="center"
        android:textColor="@color/NegroTexto"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/añadircategoria"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/round_botton2"
        android:layout_gravity="center"
        />
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis categorias"
            android:textSize="30dp"
            android:textColor="@color/DarkBlue"
            />

            <Button
                android:layout_marginLeft="100dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_mode_edit_blue_24dp"

                />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_delete_blue_24dp"
                />
            />
    </TableRow>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/Screenshot_1"
        android:layout_gravity="center"
        />
    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guarda Cambios"
        android:textColor="@color/BlancoLetra"
        android:background="@color/DarkBlue"
        />

</LinearLayout>